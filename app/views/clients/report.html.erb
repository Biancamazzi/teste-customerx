<p id="notice"><%= notice %></p>


<h1>Clientes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Contatos</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @clients.each do |client| %>      
    <tr>
      <td><%= link_to client.name, client %></td>
      <td><%= client.email %></td>
      <td><%= client.phone %></td>
      <td><% client.contacts.each do |contact| %>    
        <%= link_to contact.name, contact %><br>
      <% end %>
      </td>


    </tr>
  <% end %>
  </tbody>
</table>


<br>

<%= link_to 'Novo Cliente', new_client_path %>
