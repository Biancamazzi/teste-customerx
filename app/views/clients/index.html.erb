<p id="notice"><%= notice %></p>


<h1>Clientes</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @clients.each do |client| %>      
    <tr>
      <td><%= link_to client.name, client %></td>
      <td><%= client.email %></td>
      <td><%= client.phone %></td>      
      <td><%= link_to 'Mostrar', client , class:"btn btn-secondary btn-sm" %></td>
      <td><%= link_to 'Editar', edit_client_path(client),  class:"btn btn-secondary btn-sm" %></td>
      <td><%= link_to 'Deletar', client, class:"btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<br>

<%= link_to 'Novo Cliente', new_client_path %>
