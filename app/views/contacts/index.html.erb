<p id="notice"><%= notice %></p>

<h1>Contatos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
      <td><%= link_to contact.name, contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= link_to contact.client.name, contact.client %></td>
        <td><%= link_to 'Mostrar', contact, class:"btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Editar', edit_contact_path(contact), class:"btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Deletar', contact,class:"btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Contato', new_contact_path %>
